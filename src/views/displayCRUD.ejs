<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
        table, th, td {
          border:1px solid black;
          border-collapse: collapse ; 
        }
        .btn-edit{
          outline: none;
          border: none;
          background-color: rgb(129, 129, 209) ;
          border-radius: 5px;
          height: 25px;
          width: 60px;
          cursor: pointer;
        }
        .btn-del{
          outline: none;
          border: none;
          background-color: rgb(216, 116, 141) ;
          border-radius: 5px;
          height: 25px;
          width: 60px;
          cursor: pointer;
        }
        </style>
</head>
<body>
    <table style="width:100%">
        <tr>
          <td>Email</td>
          <td>First name</td>
          <td>Last name</td>
          <td>Address</td>
          <td>Actions</td>
        </tr>
        
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td>
                <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-del" type="button">Delete</a>
              </td>  
            </tr>
         <% } %>
      </table>
</body>
</html>
